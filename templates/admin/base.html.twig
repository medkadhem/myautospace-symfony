                <hr style="border-color: #333; margin: 16px 0;">
                <a href="{{ path('app_default') }}">ğŸ  Back to Site</a>
                <a href="{{ path('app_logout') }}">ğŸšª Logout</a>
            </nav>
        </aside>
        <main class="admin-content">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert {{ label }}" role="status">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>
