                <a href="{{ path('app_admin_announcement_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_admin_announcement' ? 'active' }}">ğŸš— Announcements</a>
                <a href="{{ path('app_admin_user_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_admin_user' ? 'active' }}">ğŸ‘¥ Users</a>
                <a href="{{ path('app_admin_service_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_admin_service' ? 'active' }}">ğŸ”§ Services</a>
                <a href="{{ path('app_admin_reservation_index') }}" class="{{ app.request.attributes.get('_route') starts with 'app_admin_reservation' ? 'active' }}">ğŸ“… Reservations</a>
