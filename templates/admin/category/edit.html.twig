{% extends 'admin/base.html.twig' %}

{% block title %}Edit Category - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Edit Category: {{ category.name }}</h1>
    <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">Back to List</a>
</div>

<div class="form-container">
    {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
        <div class="form-section">
            <h3>Category Information</h3>
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
            {{ form_row(form.parent) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Category</button>
            <a href="{{ path('app_admin_category_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
