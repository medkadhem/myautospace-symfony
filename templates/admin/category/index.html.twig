{% extends 'admin/base.html.twig' %}

{% block title %}Categories - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>üìÅ Categories</h1>
    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">‚ûï Add New Category</a>
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Parent Category</th>
                <th>Subcategories</th>
                <th>Services</th>
                <th>Announcements</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description }}</td>
                <td>{{ category.parent ? category.parent.name : 'None' }}</td>
                <td>{{ category.subCategories|length }}</td>
                <td>{{ category.services|length }}</td>
                <td>{{ category.announcements|length }}</td>
                <td class="actions">
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_admin_category_delete', {'id': category.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" style="text-align: center;">No categories found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
