{% extends 'admin/base.html.twig' %}

{% block title %}Reservations - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Reservations</h1>
    <a href="{{ path('app_admin_reservation_new') }}" class="btn btn-primary">Add New Reservation</a>
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service</th>
                <th>Client</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.service ? reservation.service.title : 'N/A' }}</td>
                <td>{{ reservation.client ? reservation.client.email : 'N/A' }}</td>
                <td>{{ reservation.reservationDate ? reservation.reservationDate|date('Y-m-d') : 'N/A' }}</td>
                <td>{{ reservation.startTime ? reservation.startTime|date('H:i') : 'N/A' }}</td>
                <td>{{ reservation.endTime ? reservation.endTime|date('H:i') : 'N/A' }}</td>
                <td>
                    <span class="badge badge-{% if reservation.status == 'confirmed' %}success{% elseif reservation.status == 'pending' %}warning{% elseif reservation.status == 'cancelled' %}danger{% else %}secondary{% endif %}">
                        {{ reservation.status }}
                    </span>
                </td>
                <td class="actions">
                    <a href="{{ path('app_admin_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_admin_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_admin_reservation_delete', {'id': reservation.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" style="text-align: center;">No reservations found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
