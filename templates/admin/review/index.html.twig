{% extends 'admin/base.html.twig' %}

{% block title %}Reviews - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Reviews</h1>
{#    <a href="{{ path('app_admin_review_new') }}" class="btn btn-primary">Add New Review</a>#}
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Service</th>
                <th>Author</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.service ? review.service.title : 'N/A' }}</td>
                <td>{{ review.author ? review.author.email : 'N/A' }}</td>
                <td>
                    <span class="badge badge-{% if review.rating >= 4 %}success{% elseif review.rating >= 3 %}warning{% else %}danger{% endif %}">
                        {{ review.rating ?? 'N/A' }}/5
                    </span>
                </td>
                <td>{{ review.comment ? (review.comment|length > 50 ? review.comment|slice(0, 50) ~ '...' : review.comment) : 'No comment' }}</td>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i') : 'N/A' }}</td>
                <td class="actions">
                    <a href="{{ path('app_admin_review_show', {'id': review.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_admin_review_edit', {'id': review.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_admin_review_delete', {'id': review.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this review?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7" style="text-align: center;">No reviews found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
