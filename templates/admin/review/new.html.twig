{% extends 'admin/base.html.twig' %}

{% block title %}New Review - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Create New Review</h1>
    <a href="{{ path('app_admin_review_index') }}" class="btn btn-secondary">Back to List</a>
</div>

<div class="form-container">
    {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
        <div class="form-section">
            <h3>Review Details</h3>
            {{ form_row(form.service) }}
            {{ form_row(form.author) }}
            {{ form_row(form.rating) }}
            {{ form_row(form.comment) }}
        </div>

        <div class="form-section">
            <h3>Date</h3>
            {{ form_row(form.createdAt) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create Review</button>
            <a href="{{ path('app_admin_review_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
