{% extends 'admin/base.html.twig' %}

{% block title %}Services - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Services</h1>
{#    <a href="{{ path('app_admin_service_new') }}" class="btn btn-primary">Add New Service</a>#}
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Provider</th>
                <th>Price</th>
                <th>Duration (min)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.title }}</td>
                <td>{{ service.description|length > 50 ? service.description|slice(0, 50) ~ '...' : service.description }}</td>
                <td>{{ service.category ? service.category.name : 'N/A' }}</td>
                <td>{{ service.provider ? service.provider.email : 'N/A' }}</td>
                <td>{{ service.price }} TND</td>
                <td>{{ service.duration }}</td>
                <td><span class="badge badge-{{ service.isActive ? 'success' : 'danger' }}">{{ service.isActive ? 'Active' : 'Inactive' }}</span></td>
                <td class="actions">
                    <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_admin_service_delete', {'id': service.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this service?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9" style="text-align: center;">No services found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
