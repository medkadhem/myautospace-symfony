{% extends 'admin/base.html.twig' %}

{% block title %}Edit User - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Edit User: {{ user.email }}</h1>
    <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Back to List</a>
</div>

<div class="form-container">
    {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
        <div class="form-section">
            <h3>User Information</h3>
            {{ form_row(form.email) }}
            {{ form_row(form.password, {'label': 'New Password (leave empty to keep current)'}) }}
            {{ form_row(form.phone) }}
        </div>

        <div class="form-section">
            <h3>Roles & Status</h3>
            {{ form_row(form.roles) }}
            {{ form_row(form.isActive) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update User</button>
            <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
