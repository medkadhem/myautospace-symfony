{% extends 'admin/base.html.twig' %}

{% block title %}Users - Admin{% endblock %}

{% block body %}
<div class="admin-header">
    <h1>Users</h1>
    <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary">Add New User</a>
</div>

<div class="table-container">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Roles</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone ?? 'N/A' }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge badge-info">{{ role }}</span>
                    {% endfor %}
                </td>
                <td><span class="badge badge-{{ user.isActive ? 'success' : 'danger' }}">{{ user.isActive ? 'Active' : 'Inactive' }}</span></td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : 'N/A' }}</td>
                <td class="actions">
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">View</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7" style="text-align: center;">No users found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
