{% extends 'base.html.twig' %}

{% block title %}{{ announcement.brand }} {{ announcement.model }} - MyAutoSpace{% endblock %}

{% block body %}
<div class="listing-detail-container">
  <div class="listing-detail-content">
    <div class="listing-detail-header">
      <div>
        <h1>{{ announcement.brand }} {{ announcement.model }}</h1>
        <p class="listing-subtitle">{{ announcement.year }} ‚Ä¢ {{ announcement.mileage|number_format(0, '.', ',') }} km ‚Ä¢ {{ announcement.fuelType }}</p>
      </div>
      <a href="#" onclick="goBack(); return false;" class="btn ghost" id="back-btn">‚Üê Back</a>
    </div>

    <div class="listing-detail-body">
      <div class="listing-main">
        <div class="main-photo-container">
          <div class="main-photo" onclick="openLightbox(0)">
            {% if announcement.mainPhoto %}
              <img src="{{ asset('uploads/announcements/' ~ announcement.mainPhoto) }}" alt="{{ announcement.brand }} {{ announcement.model }}" onerror="this.src='https://via.placeholder.com/800x600?text=Vehicle'">
            {% else %}
              <img src="https://via.placeholder.com/800x600?text=Vehicle" alt="Vehicle">
            {% endif %}
            <div class="photo-overlay">
              <i class="fas fa-search-plus"></i> Click to enlarge
            </div>
          </div>
        </div>

        <div class="price-section">
          <h2 class="price-display">{{ announcement.price }} TND</h2>
          <p class="status-label">{{ announcement.status }}</p>
        </div>

        <div class="vehicle-details">
          <h3>Vehicle Details</h3>
          <div class="detail-grid">
            <div class="detail-row">
              <span class="detail-label">Brand:</span>
              <span class="detail-value">{{ announcement.brand }}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Model:</span>
              <span class="detail-value">{{ announcement.model }}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Category:</span>
              <span class="detail-value">{{ announcement.status }}</span>
            </div>
          </div>
        </div>

        <div class="vehicle-specs">
          <div class="spec">
            <span class="spec-icon">üìÖ</span>
            <div>
              <div class="spec-label">Year</div>
              <div class="spec-value">{{ announcement.year }}</div>
            </div>
          </div>
          <div class="spec">
            <span class="spec-icon">üõ£Ô∏è</span>
            <div>
              <div class="spec-label">Mileage</div>
              <div class="spec-value">{{ announcement.mileage }} km</div>
            </div>
          </div>
          <div class="spec">
            <span class="spec-icon">‚õΩ</span>
            <div>
              <div class="spec-label">Fuel</div>
              <div class="spec-value">{{ announcement.fuelType }}</div>
            </div>
          </div>
          <div class="spec">
            <span class="spec-icon">‚≠ê</span>
            <div>
              <div class="spec-label">Rating</div>
              <div class="spec-value">{{ announcement.rating }}/5</div>
            </div>
          </div>
        </div>

        <div class="location-section">
          <h4>üìç Location</h4>
          <p>{{ announcement.location }}</p>
        </div>

        {% if announcement.photos and announcement.photos|length > 0 %}
          <div class="photo-gallery-section">
            <h3>Additional Photos ({{ announcement.photos|length }})</h3>
            <div class="photo-gallery">
              {% for photo in announcement.photos %}
                <div class="gallery-item" onclick="openLightbox({{ loop.index }})">
                  <img src="{{ asset('uploads/announcements/' ~ photo) }}" alt="Vehicle photo {{ loop.index }}" onerror="this.src='https://via.placeholder.com/200x150?text=Photo'">
                  <div class="gallery-overlay">
                    <i class="fas fa-search-plus"></i>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        <div class="description-section">
          <h3>Description</h3>
          <p>{{ announcement.description }}</p>
        </div>

        <!-- Reviews Section -->
        {% if announcement.reviews|length > 0 or is_granted('ROLE_USER') %}
        <div class="reviews-section">
          <h3>‚≠ê Customer Reviews ({{ announcement.averageRating|number_format(1) }}/5 - {{ announcement.reviewCount }} reviews)</h3>
          
          {% if is_granted('ROLE_USER') and app.user != announcement.vendor %}
          <div class="leave-review-cta">
            <a href="{{ path('app_review_create_for_announcement', {announcementId: announcement.id}) }}" class="btn yellow">Write a Review</a>
          </div>
          {% endif %}

          <div class="reviews-list">
            {% for review in announcement.reviews %}
            <div class="review-item">
              <div class="review-header">
                <div class="review-author">
                  <div class="author-avatar">{{ review.author.email|upper|first }}</div>
                  <div>
                    <div class="author-name">{{ review.author.fullName ?? review.author.email }}</div>
                    <div class="review-date">{{ review.createdAt|date('M d, Y') }}</div>
                  </div>
                </div>
                <div class="review-rating">
                  {% for i in 1..5 %}
                    <span class="{{ i <= review.rating ? 'star-filled' : 'star-empty' }}">‚òÖ</span>
                  {% endfor %}
                </div>
              </div>
              {% if review.comment %}
              <p class="review-comment">{{ review.comment }}</p>
              {% endif %}
            </div>
            {% endfor %}
          </div>
        </div>
        {% endif %}
      </div>

      <div class="listing-sidebar">
        <div class="price-card">
          <div class="price-display">{{ announcement.price|number_format(0, '.', ',') }} TND</div>
          <p class="status-badge status-{{ announcement.status }}">{{ announcement.status|capitalize }}</p>
        </div>

        {% if not (is_granted('ROLE_USER') and app.user.id == announcement.vendor.id) %}
          <div class="action-panel">
            <button class="btn yellow btn-block">üí¨ Contact Seller</button>
            <button class="btn secondary btn-block">üìß Send Message</button>
          </div>
        {% endif %}

        <div class="specs-card">
          <h3>Key Specifications</h3>
          <div class="specs-list">
            <div class="spec-item">
              <span class="spec-icon">üìÖ</span>
              <div>
                <div class="spec-label">Year</div>
                <div class="spec-value">{{ announcement.year }}</div>
              </div>
            </div>
            <div class="spec-item">
              <span class="spec-icon">üõ£Ô∏è</span>
              <div>
                <div class="spec-label">Mileage</div>
                <div class="spec-value">{{ announcement.mileage|number_format(0, '.', ',') }} km</div>
              </div>
            </div>
            <div class="spec-item">
              <span class="spec-icon">‚õΩ</span>
              <div>
                <div class="spec-label">Fuel Type</div>
                <div class="spec-value">{{ announcement.fuelType|capitalize }}</div>
              </div>
            </div>
            <div class="spec-item">
              <span class="spec-icon">üìç</span>
              <div>
                <div class="spec-label">Location</div>
                <div class="spec-value">{{ announcement.location }}</div>
              </div>
            </div>
          </div>
        </div>

        <div class="details-card">
          <h3>Vehicle Details</h3>
          <div class="details-list">
            <div class="detail-item">
              <span class="detail-label">Brand</span>
              <span class="detail-value">{{ announcement.brand }}</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Model</span>
              <span class="detail-value">{{ announcement.model }}</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Status</span>
              <span class="detail-value">{{ announcement.status|capitalize }}</span>
            </div>
          </div>
        </div>

        {% if is_granted('ROLE_USER') and app.user.id == announcement.vendor.id %}
          <div class="owner-actions">
            <a href="{{ path('app_announcement_edit', {id: announcement.id}) }}" class="btn yellow btn-block">‚úèÔ∏è Edit Listing</a>
            <form method="post" action="{{ path('app_announcement_delete', {'id': announcement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this listing?');" style="margin-top: 12px;">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ announcement.id) }}">
              <button type="submit" class="btn danger btn-block">üóëÔ∏è Delete Listing</button>
            </form>
          </div>
        {% elseif is_granted('ROLE_ADMIN') %}
          <div class="admin-actions">
            <a href="{{ path('app_announcement_edit', {id: announcement.id}) }}" class="btn secondary btn-block">‚úèÔ∏è Edit Listing</a>
            <form method="post" action="{{ path('app_announcement_delete', {'id': announcement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this listing?');" style="margin-top: 12px;">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ announcement.id) }}">
              <button type="submit" class="btn danger btn-block">üóëÔ∏è Delete Listing</button>
            </form>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<!-- Image Lightbox -->
<div id="lightbox" class="lightbox" onclick="closeLightbox()">
  <span class="lightbox-close">&times;</span>
  <div class="lightbox-content" onclick="event.stopPropagation()">
    <button class="lightbox-nav lightbox-prev" onclick="changeImage(-1)">‚ùÆ</button>
    <img id="lightbox-img" src="" alt="Vehicle photo">
    <button class="lightbox-nav lightbox-next" onclick="changeImage(1)">‚ùØ</button>
  </div>
  <div class="lightbox-counter" id="lightbox-counter"></div>
</div>

