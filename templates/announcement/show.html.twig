<script>
  // Back button logic
  function goBack() {
    const referrer = document.referrer;
    const isOwner = {{ (is_granted('ROLE_USER') and app.user.id == announcement.vendor.id) ? 'true' : 'false' }};
    const isProvider = {{ is_granted('ROLE_PROVIDER') ? 'true' : 'false' }};
    const isSeller = {{ is_granted('ROLE_SELLER') ? 'true' : 'false' }};
    const isAdmin = {{ is_granted('ROLE_ADMIN') ? 'true' : 'false' }};
    
    // Check if came from marketplace
    if (referrer && referrer.includes('marketplace')) {
      window.location.href = '{{ path('app_marketplace') }}';
    }
    // Check if owner and came from dashboard
    else if (isOwner && referrer && referrer.includes('dashboard')) {
      if (isProvider) {
        window.location.href = '{{ path('app_dashboard_provider') }}';
      } else if (isSeller) {
        window.location.href = '{{ path('app_dashboard_seller') }}';
      } else if (isAdmin) {
        window.location.href = '{{ path('app_dashboard_admin') }}';
      } else {
        window.location.href = '{{ path('app_announcement_index') }}';
      }
    }
    // Default: go to listings or use browser back
    else if (referrer && (referrer.includes('announcement') || referrer.includes(window.location.host))) {
      window.history.back();
    } else {
      window.location.href = '{{ path('app_announcement_index') }}';
    }
  }

  let currentImageIndex = 0;
  const images = [
    {% if announcement.mainPhoto %}'{{ asset('uploads/announcements/' ~ announcement.mainPhoto) }}',{% endif %}
    {% if announcement.photos %}
      {% for photo in announcement.photos %}
        '{{ asset('uploads/announcements/' ~ photo) }}'{% if not loop.last %},{% endif %}
      {% endfor %}
    {% endif %}
  ];

  function openLightbox(index) {
    currentImageIndex = index;
    const lightbox = document.getElementById('lightbox');
    const img = document.getElementById('lightbox-img');
    img.src = images[currentImageIndex];
    lightbox.classList.add('active');
    updateCounter();
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    const lightbox = document.getElementById('lightbox');
    lightbox.classList.remove('active');
    document.body.style.overflow = 'auto';
  }

  function changeImage(direction) {
    currentImageIndex += direction;
    if (currentImageIndex < 0) currentImageIndex = images.length - 1;
    if (currentImageIndex >= images.length) currentImageIndex = 0;
    
    const img = document.getElementById('lightbox-img');
    img.src = images[currentImageIndex];
    updateCounter();
  }

  function updateCounter() {
    const counter = document.getElementById('lightbox-counter');
    counter.textContent = `${currentImageIndex + 1} / ${images.length}`;
  }

  // Keyboard navigation
  document.addEventListener('keydown', function(e) {
    const lightbox = document.getElementById('lightbox');
    if (lightbox.classList.contains('active')) {
      if (e.key === 'Escape') closeLightbox();
      if (e.key === 'ArrowLeft') changeImage(-1);
      if (e.key === 'ArrowRight') changeImage(1);
    }
  });
</script>
