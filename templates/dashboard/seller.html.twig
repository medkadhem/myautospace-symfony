{% extends 'base.html.twig' %}

{% block title %}Seller Dashboard - MyAutoSpace{% endblock %}

{% block body %}
<div class="dashboard-container">
  <div class="dashboard-header">
    <div>
      <h1>Seller Dashboard</h1>
      <p style="color: var(--muted); margin: 8px 0 0;">Manage your vehicle listings and track sales</p>
    </div>
    <div class="dashboard-header-actions">
      <a href="{{ path('app_announcement_new') }}" class="btn yellow btn-lg">+ New Listing</a>
    </div>
  </div>

  <div class="dashboard-stats">
    <div class="stat-card">
      <div class="stat-icon">üìã</div>
      <div class="stat-label">Active Listings</div>
      <div class="stat-value">{{ activeListings }}</div>
      <div class="stat-change">{{ announcements|length }} total</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üí∞</div>
      <div class="stat-label">Total Listings Value</div>
      <div class="stat-value">{{ (totalValue|number_format(2, '.', ',')) }} TND</div>
      <div class="stat-change">Across all listings</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üë•</div>
      <div class="stat-label">Total Listings</div>
      <div class="stat-value">{{ announcements|length }}</div>
      <div class="stat-change">All time</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">‚≠ê</div>
      <div class="stat-label">Your Rating</div>
      <div class="stat-value">{{ averageRating }}/5</div>
      <div class="stat-change">Based on reviews</div>
    </div>
  </div>

  <div class="dashboard-grid">
    <div class="dashboard-card">
      <span class="card-icon">üì¶</span>
      <h3>My Listings</h3>
      <p>View and manage all your active vehicle announcements</p>
      <a href="{{ path('app_announcement_index') }}" class="btn yellow btn-block">View All ({{ announcements|length }})</a>
    </div>

    <div class="dashboard-card">
      <span class="card-icon">üí¨</span>
      <h3>Inquiries</h3>
      <p>Check buyer interest and respond to offers</p>
      <a href="#inquiries" class="btn secondary btn-block">View Inquiries</a>
    </div>

    <div class="dashboard-card">
      <span class="card-icon">‚≠ê</span>
      <h3>Reviews</h3>
      <p>View customer feedback and ratings</p>
      <a href="#reviews" class="btn secondary btn-block">See Reviews</a>
    </div>
  </div>

  {% if recentListings|length > 0 %}
  <div class="dashboard-section">
    <h2>Recent Listings</h2>
    <div class="vehicles-grid">
      {% for announcement in recentListings %}
      <div class="vehicle-card">
        <div class="card-header">
          <div class="card-image" style="background: linear-gradient(135deg, #667eea, #764ba2);">
            {% if announcement.mainPhoto %}
              <img src="{{ asset('uploads/announcements/' ~ announcement.mainPhoto) }}" alt="{{ announcement.brand }} {{ announcement.model }}" onerror="this.src='https://via.placeholder.com/400x300?text=Car'">
            {% else %}
              <img src="https://via.placeholder.com/400x300?text=Car" alt="Vehicle">
            {% endif %}
          </div>
          <button class="favorite-btn">‚ô°</button>
        </div>
        <div class="card-content">
          <div class="card-price">{{ announcement.price }} TND</div>
          <h3 class="card-title">{{ announcement.brand }} {{ announcement.model }}</h3>
          <p class="card-location">üìç {{ announcement.location }}</p>
          <div class="card-footer">
            <span class="card-rating">
              {% if announcement.status == 'active' %}
                <span style="color: var(--success);">‚óè Active</span>
              {% else %}
                <span style="color: var(--warning);">‚óè {{ announcement.status|capitalize }}</span>
              {% endif %}
            </span>
            <a href="{{ path('app_announcement_edit', {id: announcement.id}) }}" class="action-btn" style="background: var(--primary-dark); color: #000;">‚úé</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% else %}
  <div class="dashboard-section" style="text-align: center; padding: 60px 20px;">
    <p style="color: var(--muted); font-size: 16px; margin-bottom: 20px;">üì≠ You haven't posted any listings yet</p>
    <a href="{{ path('app_announcement_new') }}" class="btn yellow btn-lg">Post Your First Listing</a>
  </div>
  {% endif %}

  {% if announcements|length > 0 %}
  <div class="dashboard-section">
    <h2>All Your Listings</h2>
    <div class="dashboard-table-wrapper">
      <table class="table">
        <thead>
          <tr>
            <th>Vehicle</th>
            <th>Year</th>
            <th>Mileage</th>
            <th>Price</th>
            <th>Posted</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for announcement in announcements %}
          <tr>
            <td>
              <strong>{{ announcement.brand }} {{ announcement.model }}</strong>
            </td>
            <td>{{ announcement.year }}</td>
            <td>{{ announcement.mileage|number_format(0, '.', ',') }} km</td>
            <td><strong>{{ announcement.price }} TND</strong></td>
            <td>{{ announcement.createdAt|date('d M Y') }}</td>
            <td>
              {% if announcement.status == 'active' %}
                <span class="badge success">Active</span>
              {% else %}
                <span class="badge warning">{{ announcement.status|capitalize }}</span>
              {% endif %}
            </td>
            <td>
              <a href="{{ path('app_announcement_show', {id: announcement.id}) }}" class="btn btn-sm ghost">View</a>
              <a href="{{ path('app_announcement_edit', {id: announcement.id}) }}" class="btn btn-sm secondary">Edit</a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}
