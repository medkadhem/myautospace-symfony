{% extends 'base.html.twig' %}

{% block title %}Marketplace - MyAutoSpace{% endblock %}

{% block body %}
<div class="marketplace-container">
  <div class="marketplace-header">
    <h1>üöó Marketplace</h1>
    <p>Discover amazing vehicles from trusted providers</p>
  </div>

  <div class="marketplace-wrapper">

    <!-- Unified Filters and Results -->
    <main class="marketplace-content">
      <!-- Enhanced Filter Bar -->
      <div class="filter-bar-enhanced">
        <form method="GET" action="{{ path('app_marketplace') }}" class="filter-form">
          <div class="filter-row">
            <div class="filter-group">
              <label>üí∞ Price Range</label>
              <div class="filter-inputs">
                <input type="number" name="minPrice" placeholder="Min" value="{{ minPrice }}" class="filter-input">
                <span class="filter-separator">‚Äî</span>
                <input type="number" name="maxPrice" placeholder="Max" value="{{ maxPrice }}" class="filter-input">
              </div>
            </div>
            
            <div class="filter-group filter-search-group">
              <label>üîç Search</label>
              <input type="text" name="search" placeholder="Search by brand, model, year..." value="{{ search }}" class="filter-input search-input">
            </div>
            
            <div class="filter-actions">
              <button type="submit" class="btn yellow">
                <span>Apply Filters</span>
              </button>
              <a href="{{ path('app_marketplace') }}" class="btn secondary">Clear</a>
            </div>
          </div>
        </form>
      </div>

      <!-- Car Listings -->
      {% if announcements|length > 0 %}
      <section class="results-section">
        <div class="results-header">
          <h2>Available Vehicles</h2>
          <span class="results-count">{{ announcements|length }} {{ announcements|length == 1 ? 'vehicle' : 'vehicles' }} found</span>
        </div>
        
        <div class="vehicles-grid">
          {% for announcement in announcements %}
          <a href="{{ path('app_announcement_show', {id: announcement.id}) }}" class="vehicle-card">
            <div class="vehicle-image">
              {% if announcement.mainPhoto %}
                <img src="{{ asset('uploads/announcements/' ~ announcement.mainPhoto) }}" alt="{{ announcement.title }}" loading="lazy">
              {% else %}
                <div class="placeholder-image">
                  <span class="placeholder-icon">üöó</span>
                </div>
              {% endif %}
              {% if announcement.isSponsored %}
                <span class="badge">‚≠ê FEATURED</span>
              {% endif %}
            </div>
            
            <div class="vehicle-info">
              <h3>{{ announcement.title }}</h3>
              
              <div class="vehicle-details">
                {% if announcement.brand %}
                  <span>üöó {{ announcement.brand }} {{ announcement.model }}</span>
                {% endif %}
                {% if announcement.year %}
                  <span>üìÖ {{ announcement.year }}</span>
                {% endif %}
                {% if announcement.mileage %}
                  <span>üõ£Ô∏è {{ announcement.mileage|number_format(0, '.', ',') }} km</span>
                {% endif %}
                {% if announcement.fuelType %}
                  <span>‚õΩ {{ announcement.fuelType }}</span>
                {% endif %}
              </div>
              
              {% if announcement.location %}
                <div class="vehicle-location">
                  <span>üìç {{ announcement.location }}</span>
                </div>
              {% endif %}
              
              <div class="vehicle-footer">
                <span class="price">{{ announcement.price|number_format(0, '.', ',') }} TND</span>
                <span class="status {{ announcement.status }}">{{ announcement.status|capitalize }}</span>
              </div>
            </div>
          </a>
          {% endfor %}
        </div>
      </section>
      {% else %}
      <div class="no-results">
        <div class="no-results-icon">üîç</div>
        <h3>No Vehicles Found</h3>
        <p>We couldn't find any vehicles matching your criteria.</p>
        <a href="{{ path('app_marketplace') }}" class="btn yellow">View All Vehicles</a>
      </div>
      {% endif %}

    </main>
  </div>
</div>

<style>
  .marketplace-container {
    padding: 40px 20px;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .marketplace-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .marketplace-header h1 {
    font-size: 32px;
    margin-bottom: 10px;
  }

  .marketplace-wrapper {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .marketplace-content {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .filter-bar {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .filter-bar-form {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .filter-item {
    flex: 0 0 auto;
  }

  .filter-search {
    flex: 1 1 200px;
  }

  .filter-select,
  .filter-input-inline {
    padding: 10px 14px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    color: var(--text);
    font-size: 14px;
    min-width: 150px;
  }

  .filter-input-inline {
    min-width: 120px;
  }

  .filter-select:focus,
  .filter-input-inline:focus {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--accent);
    outline: none;
  }

  .results-section h2 {
    font-size: 20px;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .listings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .listing-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .listing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .listing-image {
    width: 100%;
    height: 180px;
    background: var(--bg-tertiary);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
  }

  .listing-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .listing-image.placeholder {
    background: linear-gradient(135deg, var(--brand-yellow), var(--brand-yellow-dark));
  }

  .listing-content {
    padding: 16px;
  }

  .listing-content h3 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .listing-year {
    font-size: 12px;
    color: var(--muted);
    margin-bottom: 4px;
  }

  .listing-fuel {
    font-size: 12px;
    color: var(--muted);
    margin-bottom: 12px;
  }

  .listing-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .listing-price {
    font-size: 16px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  .service-card {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .service-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 12px;
  }

  .service-header h3 {
    font-size: 16px;
    font-weight: 600;
  }

  .service-duration {
    font-size: 12px;
    color: var(--muted);
  }

  .service-description {
    font-size: 13px;
    color: var(--muted);
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .service-provider {
    font-size: 13px;
    color: var(--text);
    margin-bottom: 12px;
    padding: 8px;
    background: var(--bg-tertiary);
    border-radius: 6px;
  }

  .service-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .service-price {
    font-size: 16px;
  }

  .no-results {
    text-align: center;
    padding: 60px 20px;
    color: var(--muted);
  }

  .no-results p {
    font-size: 24px;
    margin-bottom: 20px;
  }

  @media (max-width: 768px) {
    .filter-bar-form {
      flex-direction: column;
      align-items: stretch;
    }

    .filter-item,
    .filter-search {
      flex: 1 1 auto;
      width: 100%;
    }

    .filter-select,
    .filter-input-inline {
      width: 100%;
    }

    .filter-bar-form .btn {
      width: 100%;
    }

    .listings-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
{% endblock %}
