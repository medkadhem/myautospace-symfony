{% extends 'base.html.twig' %}

{% block title %}Marketplace - MyAutoSpace{% endblock %}

{% block body %}
<div class="marketplace-container">
  <div class="marketplace-header">
    <h1>Marketplace</h1>
    <p>Discover cars and services from trusted providers</p>
  </div>

  <div class="marketplace-wrapper">

    <!-- Unified Filters and Results -->
    <main class="marketplace-content">
      <!-- Filter Bar -->
      <div class="filter-bar">
        <form method="GET" action="{{ path('app_marketplace') }}" class="filter-bar-form">
          <div class="filter-item">
            <select name="type" class="filter-select">
              <option value="all" {% if type == 'all' or type is empty %}selected{% endif %}>All</option>
              <option value="listings" {% if type == 'listings' %}selected{% endif %}>Car Listings</option>
              <option value="services" {% if type == 'services' %}selected{% endif %}>Services</option>
            </select>
          </div>
          
          {% if type != 'services' %}
          <div class="filter-item">
            <input type="number" name="minPrice" placeholder="Min Price" value="{{ minPrice }}" class="filter-input-inline">
          </div>
          <div class="filter-item">
            <input type="number" name="maxPrice" placeholder="Max Price" value="{{ maxPrice }}" class="filter-input-inline">
          </div>
          {% endif %}
          
          <div class="filter-item filter-search">
            <input type="text" name="search" placeholder="Search..." value="{{ search }}" class="filter-input-inline">
          </div>
          
          <button type="submit" class="btn yellow btn-sm">Apply</button>
          <a href="{{ path('app_marketplace') }}" class="btn secondary btn-sm">Clear</a>
        </form>
      </div>

      <!-- Car Listings -->
      {% if type != 'services' and announcements|length > 0 %}
      <section class="results-section">
        <h2>Car Listings ({{ announcements|length }})</h2>
        <div class="listings-grid">
          {% for announcement in announcements %}
          <div class="listing-card">
            {% if announcement.mainPhoto %}
              <div class="listing-image">
                <img src="{{ asset('uploads/announcements/' ~ announcement.mainPhoto) }}" alt="{{ announcement.title }}" loading="lazy">
              </div>
            {% else %}
              <div class="listing-image placeholder">
                <span>üöó</span>
              </div>
            {% endif %}
            
            <div class="listing-content">
              <h3>{{ announcement.brand }} {{ announcement.model }}</h3>
              <p class="listing-year">{{ announcement.year }} ‚Ä¢ {{ announcement.mileage }} km</p>
              <p class="listing-fuel">{{ announcement.fuelType }}</p>
              
              <div class="listing-footer">
                <div class="listing-price">
                  <strong>{{ announcement.price|number_format(0, '.', ' ') }} TND</strong>
                </div>
                <a href="{{ path('app_announcement_show', {id: announcement.id}) }}" class="btn yellow btn-sm">View</a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </section>
      {% endif %}

      <!-- Services -->
      {% if type != 'listings' and services|length > 0 %}
      <section class="results-section">
        <h2>Services ({{ services|length }})</h2>
        <div class="services-grid">
          {% for service in services %}
          <div class="service-card">
            <div class="service-header">
              <h3>{{ service.title }}</h3>
              <span class="service-duration">‚è±Ô∏è {{ service.duration }} min</span>
            </div>
            
            <p class="service-description">{{ service.description|slice(0, 100) }}...</p>
            
            <div class="service-provider">
              <strong>{{ service.provider.fullName }}</strong>
            </div>

            <div class="service-footer">
              <div class="service-price">
                <strong>{{ service.price|number_format(0, '.', ' ') }} TND</strong>
              </div>
              <a href="{{ path('app_service_show', {id: service.id}) }}" class="btn yellow btn-sm">View</a>
            </div>
          </div>
          {% endfor %}
        </div>
      </section>
      {% endif %}

      <!-- No Results -->
      {% if announcements|length == 0 and services|length == 0 %}
      <div class="no-results">
        <p>üòî No results found</p>
        <a href="{{ path('app_marketplace') }}" class="btn yellow">View All Listings</a>
      </div>
      {% endif %}

    </main>
  </div>
</div>

<style>
  .marketplace-container {
    padding: 40px 20px;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .marketplace-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .marketplace-header h1 {
    font-size: 32px;
    margin-bottom: 10px;
  }

  .marketplace-wrapper {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .marketplace-content {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .filter-bar {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .filter-bar-form {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .filter-item {
    flex: 0 0 auto;
  }

  .filter-search {
    flex: 1 1 200px;
  }

  .filter-select,
  .filter-input-inline {
    padding: 10px 14px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    color: var(--text);
    font-size: 14px;
    min-width: 150px;
  }

  .filter-input-inline {
    min-width: 120px;
  }

  .filter-select:focus,
  .filter-input-inline:focus {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--accent);
    outline: none;
  }

  .results-section h2 {
    font-size: 20px;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .listings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .listing-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .listing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .listing-image {
    width: 100%;
    height: 180px;
    background: var(--bg-tertiary);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
  }

  .listing-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .listing-image.placeholder {
    background: linear-gradient(135deg, var(--brand-yellow), var(--brand-yellow-dark));
  }

  .listing-content {
    padding: 16px;
  }

  .listing-content h3 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .listing-year {
    font-size: 12px;
    color: var(--muted);
    margin-bottom: 4px;
  }

  .listing-fuel {
    font-size: 12px;
    color: var(--muted);
    margin-bottom: 12px;
  }

  .listing-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .listing-price {
    font-size: 16px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }

  .service-card {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 12px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .service-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 12px;
  }

  .service-header h3 {
    font-size: 16px;
    font-weight: 600;
  }

  .service-duration {
    font-size: 12px;
    color: var(--muted);
  }

  .service-description {
    font-size: 13px;
    color: var(--muted);
    margin-bottom: 12px;
    line-height: 1.4;
  }

  .service-provider {
    font-size: 13px;
    color: var(--text);
    margin-bottom: 12px;
    padding: 8px;
    background: var(--bg-tertiary);
    border-radius: 6px;
  }

  .service-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .service-price {
    font-size: 16px;
  }

  .no-results {
    text-align: center;
    padding: 60px 20px;
    color: var(--muted);
  }

  .no-results p {
    font-size: 24px;
    margin-bottom: 20px;
  }

  @media (max-width: 768px) {
    .filter-bar-form {
      flex-direction: column;
      align-items: stretch;
    }

    .filter-item,
    .filter-search {
      flex: 1 1 auto;
      width: 100%;
    }

    .filter-select,
    .filter-input-inline {
      width: 100%;
    }

    .filter-bar-form .btn {
      width: 100%;
    }

    .listings-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
{% endblock %}
