{% extends 'base.html.twig' %}

{% block title %}Chat with {{ otherUser.fullName }} - MyAutoSpace{% endblock %}

{% block body %}
<div class="message-conversation-container">
    <div class="conversation-wrapper">
        <!-- Header -->
        <div class="conversation-header">
            <div class="header-content">
                <div class="header-info">
                    <div class="user-avatar">{{ otherUser.fullName|upper|first }}</div>
                    <div>
                        <h2>{{ otherUser.fullName }}</h2>
                        <p class="listing-ref">{{ announcement.brand }} {{ announcement.model }}</p>
                    </div>
                </div>
                <a href="{{ path('app_messages') }}" class="btn ghost">‚Üê Back to Messages</a>
            </div>
        </div>

        <!-- Messages Area -->
        <div class="messages-area" id="messageContainer">
            {% if messages is empty %}
                <div class="empty-state">
                    <div class="empty-icon">üí¨</div>
                    <p>No messages yet. Start the conversation!</p>
                </div>
            {% else %}
                {% for message in messages %}
                    <div class="message {{ message.sender.id == app.user.id ? 'message-sent' : 'message-received' }}">
                        <div class="message-content">
                            <div class="message-bubble">
                                {{ message.content }}
                            </div>
                            <div class="message-time">{{ message.createdAt|date('M d, H:i') }}</div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        <!-- Message Input -->
        <div class="message-input-area">
            <form method="post" class="message-form">
                <textarea 
                    name="content" 
                    class="message-input"
                    placeholder="Type your message..."
                    rows="1"
                    required></textarea>
                <button type="submit" class="btn-send">
                    <span>Send</span>
                    <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --bg: #000000;
        --card: #1a1a1a;
        --bg-secondary: #0a0a0a;
        --text: #ffffff;
        --muted: #888888;
        --accent: #ffc107;
    }

    .message-conversation-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background: var(--bg);
    }

    .conversation-wrapper {
        width: 100%;
        max-width: 900px;
        height: 100%;
        max-height: 700px;
        background: var(--card);
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .conversation-header {
        padding: 20px 24px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        background: var(--bg-secondary);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    .header-info {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 20px;
        color: var(--bg);
        flex-shrink: 0;
    }

    .header-info h2 {
        margin: 0;
        font-size: 18px;
        font-weight: 700;
    }

    .listing-ref {
        margin: 4px 0 0;
        font-size: 13px;
        color: var(--muted);
    }

    .messages-area {
        flex: 1;
        overflow-y: auto;
        padding: 24px;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: var(--muted);
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .message {
        display: flex;
        animation: slideIn 0.3s ease-out;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message-sent {
        justify-content: flex-end;
    }

    .message-received {
        justify-content: flex-start;
    }

    .message-content {
        display: flex;
        flex-direction: column;
        gap: 6px;
        max-width: 70%;
    }

    .message-sent .message-content {
        align-items: flex-end;
    }

    .message-received .message-content {
        align-items: flex-start;
    }

    .message-bubble {
        padding: 12px 16px;
        border-radius: 12px;
        word-wrap: break-word;
        line-height: 1.4;
        font-size: 14px;
        font-weight: 500;
    }

    .message-sent .message-bubble {
        background: var(--accent);
        color: #1a1a1a;
        border-bottom-right-radius: 4px;
    }

    .message-received .message-bubble {
        background: #333333;
        color: #ffffff;
        border-bottom-left-radius: 4px;
        border: 1px solid #444444;
    }

    .message-time {
        font-size: 12px;
        color: var(--muted);
        padding: 0 4px;
    }

    .message-input-area {
        padding: 20px 24px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        background: var(--bg-secondary);
    }

    .message-form {
        display: flex;
        gap: 12px;
        align-items: flex-end;
    }

    .message-input {
        flex: 1;
        padding: 12px 16px;
        background: var(--bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        color: var(--text);
        font-size: 14px;
        font-family: inherit;
        resize: none;
        max-height: 100px;
        transition: all 0.3s ease;
    }

    .message-input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.1);
    }

    .message-form .btn-send {
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        gap: 8px !important;
        padding: 10px 20px !important;
        background: #ffc107 !important;
        color: #1a1a1a !important;
        border: none !important;
        border-radius: 24px !important;
        font-size: 14px !important;
        font-weight: 600 !important;
        cursor: pointer !important;
        transition: all 0.3s ease !important;
        white-space: nowrap !important;
        flex-shrink: 0 !important;
        text-decoration: none !important;
    }

    .message-form .btn-send:hover {
        background: #ffb800 !important;
        transform: translateY(-2px) !important;
        box-shadow: 0 6px 16px rgba(255, 193, 7, 0.3) !important;
    }

    .message-form .btn-send:active {
        transform: translateY(0) !important;
    }

    .btn {
        padding: 10px 16px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn.ghost {
        background: transparent;
        color: var(--text);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn.ghost:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
    }

    /* Scrollbar styling */
    .messages-area::-webkit-scrollbar {
        width: 6px;
    }

    .messages-area::-webkit-scrollbar-track {
        background: transparent;
    }

    .messages-area::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
    }

    .messages-area::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    @media (max-width: 768px) {
        .message-conversation-container {
            padding: 0;
            height: 100vh;
        }

        .conversation-wrapper {
            max-width: 100%;
            max-height: 100vh;
            border-radius: 0;
        }

        .header-content {
            flex-wrap: wrap;
        }

        .message-content {
            max-width: 85%;
        }

        .messages-area {
            padding: 16px;
        }

        .message-input-area {
            padding: 16px;
        }
    }
</style>

<script>
    // Auto-scroll to bottom when page loads
    document.addEventListener('DOMContentLoaded', function() {
        const container = document.getElementById('messageContainer');
        if (container) {
            setTimeout(() => {
                container.scrollTop = container.scrollHeight;
            }, 100);
        }

        // Auto-expand textarea as user types
        const textarea = document.querySelector('.message-input');
        if (textarea) {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 100) + 'px';
            });
        }
    });

    // Scroll to bottom after form submission
    const form = document.querySelector('.message-form');
    if (form) {
        form.addEventListener('submit', function() {
            setTimeout(() => {
                const container = document.getElementById('messageContainer');
                container.scrollTop = container.scrollHeight;
            }, 300);
        });
    }
</script>
{% endblock %}