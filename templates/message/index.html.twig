{% extends 'base.html.twig' %}

{% block title %}Messages - MyAutoSpace{% endblock %}

{% block body %}
<div class="messages-container">
    <div class="messages-wrapper">
        <!-- Header -->
        <div class="messages-header">
            <h1>ðŸ’¬ Messages</h1>
            <p class="subtitle">Chat with sellers about listings</p>
        </div>

        <!-- Conversations List -->
        <div class="conversations-list">
            {% if conversations is empty %}
                <div class="empty-state">
                    <div class="empty-icon">ðŸ’¬</div>
                    <h3>No messages yet</h3>
                    <p>Start a conversation by contacting a seller on a listing</p>
                    <a href="{{ path('app_announcement_index') }}" class="btn primary">Browse Listings</a>
                </div>
            {% else %}
                {% for conversation in conversations %}
                    <a href="{{ path('app_messages_conversation', {
                        announcementId: conversation.announcement.id,
                        userId: conversation.otherUser.id
                    }) }}" class="conversation-item">
                        <div class="conversation-avatar">{{ conversation.otherUser.fullName|upper|first }}</div>
                        
                        <div class="conversation-info">
                            <div class="conversation-header-row">
                                <h3 class="conversation-name">{{ conversation.otherUser.fullName }}</h3>
                                <span class="message-time">{{ conversation.lastMessage.createdAt|date('M d') }}</span>
                            </div>
                            
                            <p class="conversation-listing">{{ conversation.announcement.brand }} {{ conversation.announcement.model }}</p>
                            
                            <p class="conversation-preview">
                                {% if conversation.lastMessage.sender.id == app.user.id %}
                                    <span class="preview-label">You:</span>
                                {% endif %}
                                {{ conversation.lastMessage.content}}
                            </p>
                        </div>

                        {% if not conversation.lastMessage.isRead and conversation.lastMessage.receiver.id == app.user.id %}
                            <div class="unread-badge"></div>
                        {% endif %}

                        <div class="conversation-arrow">
                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </div>
                    </a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>

<style>
    .messages-container {
        min-height: 100vh;
        padding: 40px 20px;
        background: var(--bg);
    }

    .messages-wrapper {
        max-width: 900px;
        margin: 0 auto;
    }

    .messages-header {
        margin-bottom: 32px;
    }

    .messages-header h1 {
        margin: 0 0 8px;
        font-size: 32px;
        font-weight: 700;
    }

    .subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 16px;
    }

    .conversations-list {
        display: flex;
        flex-direction: column;
        gap: 0;
        background: var(--card);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }

    .empty-state {
        padding: 60px 40px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .empty-icon {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-state h3 {
        margin: 0 0 8px;
        font-size: 22px;
        font-weight: 600;
    }

    .empty-state p {
        margin: 0 0 24px;
        color: var(--muted);
        font-size: 15px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn.primary {
        background: var(--accent);
        color: var(--bg);
    }

    .btn.primary:hover {
        background: #ffb800;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 193, 7, 0.3);
    }

    .conversation-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
        position: relative;
    }

    .conversation-item:last-child {
        border-bottom: none;
    }

    .conversation-item:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .conversation-avatar {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: var(--accent);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 20px;
        color: var(--bg);
        flex-shrink: 0;
    }

    .conversation-info {
        flex: 1;
        min-width: 0;
    }

    .conversation-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
        gap: 16px;
    }

    .conversation-name {
        margin: 0;
        font-size: 15px;
        font-weight: 600;
    }

    .message-time {
        font-size: 12px;
        color: var(--muted);
        white-space: nowrap;
    }

    .conversation-listing {
        margin: 0 0 6px;
        font-size: 12px;
        color: var(--muted);
    }

    .conversation-preview {
        margin: 0;
        font-size: 14px;
        color: var(--text);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .preview-label {
        color: var(--muted);
        font-weight: 500;
    }

    .unread-badge {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: var(--accent);
        flex-shrink: 0;
    }

    .conversation-arrow {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        margin-left: 8px;
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .messages-container {
            padding: 20px 12px;
        }

        .messages-wrapper {
            max-width: 100%;
        }

        .messages-header {
            margin-bottom: 24px;
        }

        .messages-header h1 {
            font-size: 24px;
        }

        .conversation-item {
            gap: 12px;
            padding: 12px 16px;
        }

        .conversation-avatar {
            width: 48px;
            height: 48px;
            font-size: 18px;
        }

        .conversation-name {
            font-size: 14px;
        }

        .conversation-listing {
            font-size: 11px;
        }

        .empty-state {
            padding: 40px 20px;
        }

        .empty-icon {
            font-size: 60px;
            margin-bottom: 16px;
        }

        .empty-state h3 {
            font-size: 18px;
        }

        .empty-state p {
            font-size: 14px;
        }
    }
</style>
{% endblock %}
