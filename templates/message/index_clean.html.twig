{% extends 'base.html.twig' %}

{% block title %}Messages - MyAutoSpace{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="mb-4">
                <h2 class="fw-bold mb-1">Messages</h2>
                <p class="text-muted mb-0">{{ conversations|length }} conversation{{ conversations|length != 1 ? 's' : '' }}</p>
            </div>
            
            <!-- Messages Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    {% if conversations is empty %}
                        <div class="text-center py-5">
                            <svg width="64" height="64" fill="currentColor" class="text-muted mb-3 opacity-50" viewBox="0 0 16 16">
                                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
                            </svg>
                            <h5 class="text-muted">No messages yet</h5>
                            <p class="text-muted">Start a conversation from the marketplace</p>
                            <a href="{{ path('app_marketplace') }}" class="btn btn-primary mt-2">Browse Marketplace</a>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for conversation in conversations %}
                                <a href="{{ path('app_messages_conversation', {
                                    announcementId: conversation.announcement.id,
                                    userId: conversation.otherUser.id
                                }) }}" class="list-group-item list-group-item-action px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <!-- Avatar -->
                                        <div class="avatar-circle me-3">
                                            {{ conversation.otherUser.fullName|upper|first }}
                                        </div>
                                        
                                        <!-- Content -->
                                        <div class="flex-grow-1 min-width-0">
                                            <div class="d-flex justify-content-between align-items-start mb-1">
                                                <h6 class="mb-0 fw-semibold">{{ conversation.otherUser.fullName }}</h6>
                                                <small class="text-muted ms-2">{{ conversation.lastMessage.createdAt|date('M d, H:i') }}</small>
                                            </div>
                                            <p class="mb-1 small text-muted">{{ conversation.announcement.title }}</p>
                                            <p class="mb-0 text-truncate text-secondary">
                                                {% if conversation.lastMessage.sender.id == app.user.id %}
                                                    <span class="fw-medium">You:</span>
                                                {% endif %}
                                                {{ conversation.lastMessage.content }}
                                            </p>
                                        </div>
                                        
                                        <!-- Unread Badge -->
                                        {% if not conversation.lastMessage.isRead and conversation.lastMessage.receiver.id == app.user.id %}
                                            <span class="badge bg-primary ms-2">New</span>
                                        {% endif %}
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-circle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    font-weight: 700;
    flex-shrink: 0;
}

.list-group-item {
    border-left: 3px solid transparent;
    transition: all 0.2s ease;
}

.list-group-item:hover {
    background-color: #f8f9fa;
    border-left-color: #667eea;
}

.min-width-0 {
    min-width: 0;
}
</style>
{% endblock %}
