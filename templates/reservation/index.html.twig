{% extends 'base.html.twig' %}

{% block title %}My Bookings - MyAutoSpace{% endblock %}

{% block body %}
<div class="reservations-container">
  <div class="reservations-header">
    <div>
      <h1>My Bookings</h1>
      <p style="color: var(--muted); margin: 8px 0 0;">View and manage your reservations</p>
    </div>
    <div class="header-actions">
      <a href="{{ path('app_marketplace') }}" class="btn yellow">Browse Marketplace</a>
      <a href="{{ path('app_services') }}" class="btn secondary">Browse Services</a>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="filter-tabs">
    <button class="tab-btn active" data-status="all">All ({{ reservations|length }})</button>
    <button class="tab-btn" data-status="pending">‚è≥ Pending ({{ reservations|filter(r => r.status == 'pending')|length }})</button>
    <button class="tab-btn" data-status="confirmed">‚úì Confirmed ({{ reservations|filter(r => r.status == 'confirmed')|length }})</button>
    <button class="tab-btn" data-status="completed">‚úì‚úì Completed ({{ reservations|filter(r => r.status == 'completed')|length }})</button>
    <button class="tab-btn" data-status="cancelled">‚úó Cancelled ({{ reservations|filter(r => r.status == 'cancelled')|length }})</button>
  </div>

  {% if reservations|length > 0 %}
  <!-- Reservations Grid -->
  <div class="reservations-list">
    {% for reservation in reservations %}
    <div class="reservation-item" data-status="{{ reservation.status }}">
      <div class="reservation-item-header">
        <div class="item-title">
          <h3>
            {% if reservation.service %}
              üîß {{ reservation.service.title }}
            {% else %}
              üöó {{ reservation.announcement.title }}
            {% endif %}
          </h3>
          <span class="badge badge-{{ reservation.status }}">
            {% if reservation.status == 'pending' %}‚è≥{% elseif reservation.status == 'confirmed' %}‚úì{% elseif reservation.status == 'completed' %}‚úì‚úì{% elseif reservation.status == 'cancelled' %}‚úó{% endif %}
            {{ reservation.status|capitalize }}
          </span>
        </div>
        <div class="item-meta">
          <span class="booking-id">#{{ reservation.id }}</span>
        </div>
      </div>

      <div class="reservation-item-body">
        <div class="item-details">
          <div class="detail-group">
            <span class="detail-icon">üìÖ</span>
            <div>
              <div class="detail-label">Booking Date</div>
              <div class="detail-text">{{ reservation.reservationDate|date('l, M d, Y') }}</div>
            </div>
          </div>

          {% if reservation.startTime %}
          <div class="detail-group">
            <span class="detail-icon">‚è∞</span>
            <div>
              <div class="detail-label">Time</div>
              <div class="detail-text">{{ reservation.startTime|date('H:i') }}{% if reservation.endTime %} - {{ reservation.endTime|date('H:i') }}{% endif %}</div>
            </div>
          </div>
          {% endif %}

          <div class="detail-group">
            <span class="detail-icon">üí∞</span>
            <div>
              <div class="detail-label">Price</div>
              <div class="detail-text price">{{ reservation.price|number_format(0, '.', ',') }} TND</div>
            </div>
          </div>

          <div class="detail-group">
            <span class="detail-icon">üë§</span>
            <div>
              <div class="detail-label">Provider</div>
              <div class="detail-text">{{ reservation.provider.fullName ? reservation.provider.fullName : reservation.provider.email }}</div>
            </div>
          </div>
        </div>

        {% if reservation.comment %}
        <div class="item-notes">
          <strong>Notes:</strong> {{ reservation.comment }}
        </div>
        {% endif %}
      </div>

      <div class="reservation-item-footer">
        <a href="{{ path('app_reservation_show', {id: reservation.id}) }}" class="btn secondary btn-sm">View Details</a>
        
        {% if reservation.status == 'pending' %}
        <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" onsubmit="return confirm('Cancel this booking?');" style="display: inline;">
          <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
          <button type="submit" class="btn danger btn-sm">Cancel Booking</button>
        </form>
        {% endif %}

        {% if reservation.status == 'completed' and not reservation.hasReview %}
        <a href="{{ path('app_review_create_from_reservation', {reservationId: reservation.id}) }}" class="btn yellow btn-sm">‚≠ê Leave Review</a>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
  {% else %}
  <div class="empty-state">
    <div class="empty-icon">üì≠</div>
    <h3>No Bookings Yet</h3>
    <p>You haven't made any reservations. Start exploring our marketplace!</p>
    <div class="empty-actions">
      <a href="{{ path('app_marketplace') }}" class="btn yellow">Browse Car Listings</a>
      <a href="{{ path('app_services') }}" class="btn secondary">Browse Services</a>
    </div>
  </div>
  {% endif %}
</div>

<style>
  .reservations-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .reservations-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .reservations-header h1 {
    font-size: 32px;
    margin: 0 0 8px;
  }

  .header-actions {
    display: flex;
    gap: 12px;
  }

  /* Filter Tabs */
  .filter-tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 32px;
    overflow-x: auto;
    padding-bottom: 8px;
  }

  .tab-btn {
    padding: 12px 24px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    background: var(--bg-secondary);
    color: var(--text);
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .tab-btn:hover {
    border-color: var(--accent);
    background: rgba(248, 231, 28, 0.1);
  }

  .tab-btn.active {
    background: var(--accent);
    border-color: var(--accent);
    color: #000;
  }

  /* Reservations List */
  .reservations-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .reservation-item {
    background: var(--card);
    border-radius: 12px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: all 0.3s;
  }

  .reservation-item:hover {
    border-color: var(--accent);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .reservation-item[data-status="pending"] {
    border-left: 4px solid #f39c12;
  }

  .reservation-item[data-status="confirmed"] {
    border-left: 4px solid #28a745;
  }

  .reservation-item[data-status="completed"] {
    border-left: 4px solid #17a2b8;
  }

  .reservation-item[data-status="cancelled"] {
    border-left: 4px solid #dc3545;
    opacity: 0.7;
  }

  .reservation-item-header {
    padding: 20px 24px;
    background: var(--bg-secondary);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: start;
    flex-wrap: wrap;
    gap: 12px;
  }

  .item-title {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .item-title h3 {
    margin: 0;
    font-size: 20px;
    font-weight: 600;
  }

  .item-meta {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .booking-id {
    font-size: 14px;
    color: var(--muted);
    font-weight: 600;
  }

  .reservation-item-body {
    padding: 24px;
  }

  .item-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 16px;
  }

  .detail-group {
    display: flex;
    align-items: start;
    gap: 12px;
  }

  .detail-icon {
    font-size: 24px;
    flex-shrink: 0;
  }

  .detail-label {
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .detail-text {
    font-size: 15px;
    font-weight: 500;
  }

  .detail-text.price {
    color: var(--accent);
    font-size: 18px;
    font-weight: 700;
  }

  .item-notes {
    background: var(--bg-secondary);
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 14px;
    color: var(--muted);
    margin-top: 12px;
  }

  .reservation-item-footer {
    padding: 16px 24px;
    background: var(--bg-secondary);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .reservation-item-footer form {
    margin: 0;
  }

  /* Badge Styles */
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 6px 14px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
  }

  .badge-pending {
    background: rgba(243, 156, 18, 0.2);
    color: #f39c12;
  }

  .badge-confirmed {
    background: rgba(40, 167, 69, 0.2);
    color: #28a745;
  }

  .badge-completed {
    background: rgba(23, 162, 184, 0.2);
    color: #17a2b8;
  }

  .badge-cancelled {
    background: rgba(220, 53, 69, 0.2);
    color: #dc3545;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: var(--card);
    border-radius: 16px;
    border: 2px dashed rgba(255, 255, 255, 0.1);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 20px;
    opacity: 0.5;
  }

  .empty-state h3 {
    font-size: 24px;
    margin: 0 0 12px;
  }

  .empty-state p {
    color: var(--muted);
    margin: 0 0 24px;
    font-size: 16px;
  }

  .empty-actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .reservations-container {
      padding: 20px 12px;
    }

    .reservations-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .reservations-header h1 {
      font-size: 24px;
    }

    .header-actions {
      width: 100%;
    }

    .header-actions .btn {
      flex: 1;
    }

    .filter-tabs {
      gap: 6px;
    }

    .tab-btn {
      padding: 10px 16px;
      font-size: 13px;
    }

    .item-details {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .reservation-item-footer {
      flex-direction: column;
    }

    .reservation-item-footer .btn,
    .reservation-item-footer form {
      width: 100%;
    }

    .reservation-item-footer .btn {
      width: 100%;
    }
  }
</style>

<script>
  // Filter functionality
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const status = this.dataset.status;
      
      // Update active tab
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      
      // Filter items
      document.querySelectorAll('.reservation-item').forEach(item => {
        if (status === 'all' || item.dataset.status === status) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>
{% endblock %}
