{% extends 'base.html.twig' %}

{% block title %}Booking Details - MyAutoSpace{% endblock %}

{% block body %}
<div class="reservation-detail-container">
  <div class="reservation-detail-content">
    <div class="reservation-detail-header">
      <div>
        <h1>Booking Details #{{ reservation.id }}</h1>
        <p class="reservation-subtitle">
          <span class="badge badge-{{ reservation.status }}">
            {% if reservation.status == 'pending' %}‚è≥{% elseif reservation.status == 'confirmed' %}‚úì{% elseif reservation.status == 'completed' %}‚úì‚úì{% elseif reservation.status == 'cancelled' %}‚úó{% endif %}
            {{ reservation.status|capitalize }}
          </span>
        </p>
      </div>
      <a href="javascript:history.back()" class="btn ghost">‚Üê Back</a>
    </div>

    <div class="reservation-detail-body">
      <div class="reservation-main">
        <!-- Service/Listing Info -->
        <div class="info-card">
          <h3>
            {% if reservation.service %}
              üîß Service Booking
            {% else %}
              üöó Vehicle Listing
            {% endif %}
          </h3>
          <div class="info-content">
            <h2>
              {% if reservation.service %}
                {{ reservation.service.title }}
              {% else %}
                {{ reservation.announcement.title }}
              {% endif %}
            </h2>
            <p class="info-description">
              {% if reservation.service %}
                {{ reservation.service.description }}
              {% else %}
                {{ reservation.announcement.brand }} {{ reservation.announcement.model }} - {{ reservation.announcement.year }}
              {% endif %}
            </p>
          </div>
        </div>

        <!-- Booking Details -->
        <div class="info-card">
          <h3>üìÖ Booking Information</h3>
          <div class="details-grid">
            <div class="detail-item">
              <span class="detail-icon">üìÖ</span>
              <div>
                <div class="detail-label">Booking Date</div>
                <div class="detail-value">{{ reservation.reservationDate|date('l, F d, Y') }}</div>
              </div>
            </div>

            {% if reservation.startTime %}
            <div class="detail-item">
              <span class="detail-icon">‚è∞</span>
              <div>
                <div class="detail-label">Start Time</div>
                <div class="detail-value">{{ reservation.startTime|date('H:i') }}</div>
              </div>
            </div>
            {% endif %}

            {% if reservation.endTime %}
            <div class="detail-item">
              <span class="detail-icon">‚è±Ô∏è</span>
              <div>
                <div class="detail-label">End Time</div>
                <div class="detail-value">{{ reservation.endTime|date('H:i') }}</div>
              </div>
            </div>
            {% endif %}

            <div class="detail-item">
              <span class="detail-icon">üìù</span>
              <div>
                <div class="detail-label">Created</div>
                <div class="detail-value">{{ reservation.createdAt|date('M d, Y H:i') }}</div>
              </div>
            </div>

            <div class="detail-item">
              <span class="detail-icon">üí∞</span>
              <div>
                <div class="detail-label">Total Price</div>
                <div class="detail-value price">{{ reservation.price|number_format(0, '.', ',') }} TND</div>
              </div>
            </div>

            <div class="detail-item">
              <span class="detail-icon">üìä</span>
              <div>
                <div class="detail-label">Status</div>
                <div class="detail-value">
                  <span class="badge badge-{{ reservation.status }}">{{ reservation.status|capitalize }}</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Client Notes -->
        {% if reservation.comment %}
        <div class="info-card">
          <h3>üí¨ Additional Notes</h3>
          <p class="comment-text">{{ reservation.comment }}</p>
        </div>
        {% endif %}
      </div>

      <div class="reservation-sidebar">
        <!-- Client Info (for Provider) -->
        {% if is_granted('ROLE_PROVIDER') and app.user.id == reservation.provider.id %}
        <div class="party-card">
          <h3>Client Information</h3>
          <div class="party-info">
            <div class="party-avatar">{{ reservation.client.email|upper|first }}</div>
            <div>
              <div class="party-name">{{ reservation.client.fullName ? reservation.client.fullName : reservation.client.email }}</div>
              <div class="party-email">{{ reservation.client.email }}</div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Provider Info (for Client) -->
        {% if app.user.id == reservation.client.id %}
        <div class="party-card">
          <h3>Provider Information</h3>
          <div class="party-info">
            <div class="party-avatar">{{ reservation.provider.email|upper|first }}</div>
            <div>
              <div class="party-name">{{ reservation.provider.fullName ? reservation.provider.fullName : reservation.provider.email }}</div>
              <div class="party-email">{{ reservation.provider.email }}</div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Actions -->
        <div class="actions-card">
          <h3>Actions</h3>
          
          {% if is_granted('ROLE_PROVIDER') and app.user.id == reservation.provider.id %}
            {% if reservation.status == 'pending' %}
              <form method="post" action="{{ path('app_reservation_confirm', {id: reservation.id}) }}" style="margin-bottom: 12px;">
                <input type="hidden" name="_token" value="{{ csrf_token('confirm' ~ reservation.id) }}">
                <button type="submit" class="btn yellow btn-block">‚úì Confirm Booking</button>
              </form>
              <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" onsubmit="return confirm('Decline this booking?');">
                <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
                <button type="submit" class="btn danger btn-block">‚úó Decline Booking</button>
              </form>
            {% elseif reservation.status == 'confirmed' %}
              <form method="post" action="{{ path('app_reservation_complete', {id: reservation.id}) }}" style="margin-bottom: 12px;">
                <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ reservation.id) }}">
                <button type="submit" class="btn success btn-block">‚úì‚úì Mark as Completed</button>
              </form>
              <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" onsubmit="return confirm('Cancel this booking?');">
                <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
                <button type="submit" class="btn secondary btn-block">Cancel Booking</button>
              </form>
            {% endif %}
          {% endif %}

          {% if app.user.id == reservation.client.id and reservation.status == 'pending' %}
            <form method="post" action="{{ path('app_reservation_cancel', {id: reservation.id}) }}" onsubmit="return confirm('Cancel this booking?');">
              <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ reservation.id) }}">
              <button type="submit" class="btn danger btn-block">Cancel Booking</button>
            </form>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .reservation-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    width: 100%;
  }

  .reservation-detail-content {
    background: var(--card);
    border-radius: 16px;
    overflow: hidden;
  }

  .reservation-detail-header {
    padding: 24px 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .reservation-detail-header h1 {
    font-size: 24px;
    margin: 0 0 8px;
  }

  .reservation-subtitle {
    margin: 0;
  }

  .reservation-detail-body {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 32px;
    padding: 32px;
  }

  .reservation-main {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .info-card, .party-card, .actions-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    padding: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .info-card h3, .party-card h3, .actions-card h3 {
    font-size: 16px;
    margin: 0 0 16px;
    font-weight: 600;
  }

  .info-content h2 {
    font-size: 22px;
    margin: 0 0 12px;
    color: var(--accent);
  }

  .info-description {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .detail-item {
    display: flex;
    align-items: start;
    gap: 12px;
  }

  .detail-icon {
    font-size: 20px;
    flex-shrink: 0;
  }

  .detail-label {
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .detail-value {
    font-size: 15px;
    font-weight: 500;
  }

  .detail-value.price {
    color: var(--accent);
    font-size: 18px;
    font-weight: 700;
  }

  .comment-text {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
    padding: 16px;
    background: var(--bg);
    border-radius: 8px;
  }

  .party-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .party-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--primary-dark));
    color: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 22px;
  }

  .party-name {
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 4px;
  }

  .party-email {
    font-size: 13px;
    color: var(--muted);
  }

  .reservation-sidebar {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .actions-card form {
    margin: 0;
  }

  .badge-pending {
    background: rgba(243, 156, 18, 0.2);
    color: #f39c12;
  }

  .badge-confirmed {
    background: rgba(40, 167, 69, 0.2);
    color: #28a745;
  }

  .badge-completed {
    background: rgba(23, 162, 184, 0.2);
    color: #17a2b8;
  }

  .badge-cancelled {
    background: rgba(220, 53, 69, 0.2);
    color: #dc3545;
  }

  @media (max-width: 968px) {
    .reservation-detail-body {
      grid-template-columns: 1fr;
    }

    .details-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .reservation-detail-container {
      padding: 8px;
    }

    .reservation-detail-header {
      padding: 16px 20px;
    }

    .reservation-detail-body {
      padding: 20px;
    }
  }
</style>
{% endblock %}
