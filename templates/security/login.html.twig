{% extends 'base.html.twig' %}

{% block title %}Sign In - MyAutoSpace{% endblock %}

{% block body %}
  <div class="form">
    <h2>Welcome Back</h2>
    <p>Sign in to access your account</p>
    
    {% if error %}
      <div class="alert error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
      <div class="field">
        <label for="inputEmail">Email Address</label>
        <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required autofocus placeholder="your@email.com">
      </div>

      <div class="field">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" required placeholder="••••••••">
      </div>

      <div class="field" style="display: flex; align-items: center; margin-bottom: 20px;">
        <input type="checkbox" id="remember_me" name="_remember_me" style="width: auto; margin-right: 8px;">
        <label for="remember_me" style="margin: 0; cursor: pointer; font-weight: normal;">Remember me</label>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div class="actions">
        <button class="btn yellow btn-lg btn-block" type="submit">Sign In</button>
      </div>

      <div style="text-align: center; margin-top: 20px;">
        <p style="color: var(--muted); margin: 0; font-size: 14px;">
          Don't have an account? 
          <a href="{{ path('app_register') }}" style="color: var(--yellow); text-decoration: none; font-weight: 700;">Sign Up</a>
        </p>
      </div>
    </form>
  </div>
{% endblock %}
