{% extends 'base.html.twig' %}

{% block title %}Sign in Â· MyAutoSpace{% endblock %}

{% block body %}
  <div class="form">
    <h2>Welcome back</h2>
    {% if error %}
      <div class="flash error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post" action="{{ path('app_login') }}">
      <div class="field">
        <label for="inputEmail">Email</label>
        <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required autofocus>
      </div>
      <div class="field">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" required>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
      <div class="actions">
        <button class="btn primary" type="submit">Sign in</button>
        <a class="btn" href="{{ path('app_register') }}">Create account</a>
      </div>
    </form>
  </div>
{% endblock %}
