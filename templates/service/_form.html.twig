<div class="dashboard-container">
  <div class="dashboard-header">
    <div>
      <h1>{{ service.id is defined and service.id ? 'Edit Service' : 'Create New Service' }}</h1>
      <p style="color: var(--muted); margin: 8px 0 0;">{{ service.id is defined and service.id ? 'Update your service details' : 'Add a new service to your profile' }}</p>
    </div>
  </div>

  <div class="form-container" style="max-width: 800px; margin: 40px auto;">
    {{ form_start(form, {'attr': {'class': 'service-form'}}) }}

    <!-- Flash Messages -->
    {% for message in app.flashes('error') %}
      <div class="form-alert error">
        <i class="fas fa-exclamation-circle"></i>
        {{ message }}
      </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
      <div class="form-alert success">
        <i class="fas fa-check-circle"></i>
        {{ message }}
      </div>
    {% endfor %}

    <!-- Service Information -->
    <div class="form-section">
      <h3 class="section-title">
        <i class="fas fa-info-circle"></i>
        Service Information
      </h3>
      
      <div class="form-grid">
        <div class="form-col-2">
          {{ form_row(form.title, {
            'label': 'Service Name',
            'attr': {'placeholder': 'e.g., Premium Car Wash', 'class': 'form-control'}
          }) }}
        </div>
        <div class="form-col-2">
          {{ form_row(form.price, {
            'label': 'Price (TND)',
            'attr': {'placeholder': '45.00', 'class': 'form-control', 'step': '0.01'}
          }) }}
        </div>
      </div>

      <div class="form-grid">
        <div class="form-col-full">
          {{ form_row(form.description, {
            'label': 'Description',
            'attr': {'placeholder': 'Describe your service in detail...', 'rows': 4, 'class': 'form-control'}
          }) }}
        </div>
      </div>

      <div class="form-grid">
        <div class="form-col-2">
          {{ form_row(form.duration, {
            'label': 'Duration (minutes)',
            'attr': {'placeholder': '60', 'class': 'form-control'}
          }) }}
        </div>
        <div class="form-col-2">
          {{ form_row(form.category, {
            'label': 'Category',
            'attr': {'class': 'form-control'}
          }) }}
        </div>
      </div>

      <div class="form-grid">
        <div class="form-col-full">
          {{ form_row(form.photoFile, {
            'label': 'Service Photo (optional)',
            'attr': {'class': 'form-control'}
          }) }}
          <small style="color: var(--muted); font-size: 12px;">Max 5MB - JPEG, PNG, WebP</small>
          {% if service.photo is defined and service.photo %}
            <div style="margin-top: 12px;">
              <img src="{{ asset('uploads/services/' ~ service.photo) }}" alt="Current photo" style="max-width: 200px; border-radius: 8px;">
            </div>
          {% endif %}
        </div>
      </div>

      <div class="form-grid">
        <div class="form-col-full">
          <div class="checkbox-wrapper">
            {{ form_row(form.isActive, {
              'label': 'Active (Make this service available for booking)',
              'attr': {'class': 'form-check-input'}
            }) }}
          </div>
        </div>
      </div>
    </div>

    <!-- Submit Buttons -->
    <div class="form-actions">
      <button type="submit" class="btn yellow btn-lg">
        <i class="fas fa-check"></i>
        {{ service.id is defined and service.id ? 'Update Service' : 'Create Service' }}
      </button>
      <a href="{{ path('app_dashboard_provider') }}" class="btn secondary btn-lg">
        <i class="fas fa-times"></i>
        Cancel
      </a>
    </div>

    {{ form_end(form) }}
  </div>
</div>

