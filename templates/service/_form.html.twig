{% extends 'base.html.twig' %}

{% block title %}{{ form.id.vars.data ? 'Edit Service' : 'Create Service' }} - MyAutoSpace{% endblock %}

{% block body %}
<div class="dashboard-container">
  <div class="dashboard-header">
    <div>
      <h1>{{ form.id.vars.data ? 'Edit Service' : 'Create New Service' }}</h1>
      <p style="color: var(--muted); margin: 8px 0 0;">{{ form.id.vars.data ? 'Update your service details' : 'Add a new service to your profile' }}</p>
    </div>
  </div>

  <div class="form" style="max-width: 700px; margin: 40px auto;">
    {{ form_start(form, {'attr': {'class': 'service-form'}}) }}

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
      <div>
        {{ form_row(form.title, {'label': 'Service Name', 'attr': {'placeholder': 'e.g., Premium Car Wash'}}) }}
      </div>
      <div>
        {{ form_row(form.price, {'label': 'Price (TND)', 'attr': {'placeholder': '45'}}) }}
      </div>
    </div>

    <div>
      {{ form_row(form.description, {'label': 'Description', 'attr': {'placeholder': 'Describe your service in detail...', 'rows': 4}}) }}
    </div>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
      <div>
        {{ form_row(form.duration, {'label': 'Duration (minutes)', 'attr': {'placeholder': '60'}}) }}
      </div>
      <div>
        {{ form_row(form.category, {'label': 'Category', 'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div>
      {{ form_row(form.isActive, {'label': 'Publish this service'}) }}
    </div>

    <div style="display: flex; gap: 12px; margin-top: 30px;">
      <button type="submit" class="btn yellow btn-lg" style="flex: 1;">
        {{ form.id.vars.data ? 'Update Service' : 'Create Service' }}
      </button>
      <a href="{{ path('app_service_index') }}" class="btn secondary btn-lg" style="flex: 1; text-align: center;">Cancel</a>
    </div>

    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
